<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/_10dp_border_radius_bg"
    android:paddingHorizontal="20dp"
    android:paddingVertical="30dp">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Charges!"
        android:textColor="@color/pallete_4"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service"
        android:textColor="@color/pallete_4"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/serviceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tyre"
        android:textColor="#72777A"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/problem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Problem"
        android:textColor="@color/pallete_4"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/service"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/problemTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flat Tyre"
        android:textColor="#72777A"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serviceTV"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@id/serviceCharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Charge"
        android:textColor="@color/pallete_4"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/problem"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/serviceChargeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs.1,200.00"
        android:textColor="#72777A"
        android:textSize="17sp"
        android:textStyle=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/problemTV"
        android:layout_marginTop="8dp"/>

    <View
        android:id="@+id/view6"
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_marginTop="9dp"
        android:background="#E5E7EB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serviceCharge" />

    <TextView
        android:id="@+id/inspection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inspection Fee"
        android:textColor="@color/pallete_4"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view6"
        android:layout_marginTop="9dp"/>

    <TextView
        android:id="@+id/inspectionCostTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs.600.00"
        android:textColor="#72777A"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view6"
        android:layout_marginTop="9dp"/>

    <TextView
        android:id="@+id/travelling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travelling Fee"
        android:textColor="@color/pallete_4"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inspection"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/travellingCostTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs.350.00"
        android:textColor="#72777A"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inspectionCostTV"
        android:layout_marginTop="8dp" />

    <View
        android:id="@+id/view7"
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_marginTop="9dp"
        android:background="#E5E7EB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/travelling" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Cost"
        android:textColor="@color/pallete_4"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view7"
        android:layout_marginTop="9dp"/>

    <TextView
        android:id="@+id/totalCostTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs.2,150.00"
        android:textColor="#72777A"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view7"
        android:layout_marginTop="9dp"/>

    <Button
        android:id="@+id/acceptButton"
        android:layout_width="160dp"
        android:layout_height="44dp"
        android:backgroundTint="@color/pallete_4"
        android:text="Accept"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/total"
        android:layout_marginTop="22dp"
        tools:ignore="Touch target size too small" />

    <Button
        android:id="@+id/declineButton"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:backgroundTint="@color/white"
        app:strokeWidth="4dp"
        app:strokeColor="@color/pallete_4"
        android:text="Decline"
        android:textColor="@color/pallete_4"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/totalCostTV"
        android:layout_marginTop="22dp"
        tools:ignore="Touch target size too small"/>

</androidx.constraintlayout.widget.ConstraintLayout>